<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/application.log</file> <!-- Path where log files will be stored -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework" level="INFO"/>
    <logger name="com.example.urlshortener" level="DEBUG"/> <!-- Change to your package -->

    <root level="INFO">
        <appender-ref ref="FILE"/>
    </root>

</configuration>
